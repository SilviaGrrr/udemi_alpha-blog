<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th colspan='3'>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% obj.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.description %></td>
        <td><%= a.user.username %></td>
        <td><%= link_to 'Show', article_path(a) %></td>
        <td><%= link_to 'Edit', edit_article_path(a) %></td>
        <td><%= link_to 'Delete', article_path(a), method: :delete, data: { confirm: "Are  you sure" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
